<div class="container">
	<div class="card card-body">
		<h3>Add a showtime</h3>
		<form action="" method="post">
            {{#if movies}}
                <label for="movieid"><h5>Movie showing</h5></label>
                <select id="{{movieid}}" name="movieid">
				{{#each movies}}
                <option value="{{movieid}}">{{title}}</option>
				{{/each}}
                </select>
                
            {{else}}
                No movies currently
            {{/if}}
			<br>
			
			{{#if cinemas}}
                <label for="cinemaid"><h5>Branch Location</h5></label>
                <select id="{{cinemaid}}" name="cinemaid">
				{{#each cinemas}}
                <option value="{{cinemaid}}">{{branch}}</option>
				{{/each}}
                </select>
                
            {{else}}
                No cinemas currently
            {{/if}}			
			<div class="form-group">
				<label class="font-italic" for="showday"><h5>Day of showing</h5></label>
				<input id="datepicker" width="200" name="showday" readonly />
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="showtime"><h5>Time of showing</h5></label><br>
				<input type="time" name="showtime"/>
			</div>
			<br>
			<button id="btnSubmit" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
		value: moment().format('DD/MM/YYYY'),
	});
</script>