<div class="avatar py-4">
    {{#if loggeduser}}
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-sm">
          <div class="card-header bg-transparent text-center">
            <img class="profile_img" width="240" height="240" src="../img/avatartemplate.png" alt="avatar">
            <h3>{{loggeduser.name}}</h3>
          </div>
          <div class="card-body">
            <p class="mb-0"><strong class="pr-1">ID:</strong>{{loggeduser.id}}</p>
            <p class="mb-0"><strong class="pr-1">Account Type:</strong>{{loggeduser.accounttype}}</p>
            <p class="mb-0"><strong class="pr-1">Date Joined:</strong>{{loggeduser.createdAt}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-header bg-transparent border-0">
            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
          </div>
          <div class="card-body pt-0">
            <table class="table table-bordered">
              <tr>
                <th width="30%">Email</th>
                <td width="2%">:</td>
                <td>{{loggeduser.email}}</td>
              </tr>
              <tr>
                <th width="30%">Mobile</th>
                <td width="2%">:</td>
                <td>{{loggeduser.phone_number}}</td>
              </tr>
              <tr>
                <th width="30%">Gender</th>
                <td width="2%">:</td>
                <td>{{loggeduser.gender}}</td>
              </tr>
              <tr>
                <th width="30%">Promotions</th>
                <td width="2%">:</td>
                <td><a href="/promos/listPromotions">Click Here!</a></td>
              </tr>
            </table>
            <a href="/user/profile/updateprofile/{{loggeduser.id}}"><button class="btn btn-warning" css="position : relative">Edit</button></a>
          </div>
        </div>
          <div style="height: 26px"></div>
        <div class="card shadow-sm">
          <div class="card-header bg-transparent border-0">
            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Booked Movies</h3>
          </div>
          <div class="card-body pt-0">
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>